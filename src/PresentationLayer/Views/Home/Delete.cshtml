@model PresentationLayer.Models.ProjectModel
@{
    ViewBag.Title = "Удаление проекта";
}
<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Сокращенное название</dt>
        <dd>
            @Html.DisplayFor(model => model.ShortName)
        </dd>


        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
